{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDbSettings": {
    "Host": "localhost",
    "Port": "27017",
    "DatabaseName": "CDD",
    "QueryMaxCount": 50
  },
  "CorsSettings": {
    "PolicyName": "AllowOrgins",
    "Origins": [
      "http://localhost:5173",
      "https://communitydailydiary.netlify.app"
    ]
  },
  "RateLimitSettings": {
    "PolicyName": "Sliding",
    "PermitLimit": 100,
    "Window": 300,
    "SegmentsPerWindow": 10,
    "QueueLimit": 2
  }
}
